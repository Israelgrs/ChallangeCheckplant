<div>
    <div>
      <%= form_for @coordinate, :as => :calculate, :url => distances_calculate_path do |f| %>
        <div>
          <h4><b><label>Primeiras coordenadas</label></b></h4>
          <label>Latitude</label>
          <%= f.text_field :first_coordinate_lat, class:'form-control' %>
        </div>
        <div>
          <label>Longitude</label>
          <%= f.text_field :first_coordinate_long, class:'form-control' %>
        </div>
        <div>
          <h4><b><label>Segundas coordenadas</label></b></h4>
          <label>Latitude</label>
          <%= f.text_field :second_coordinate_lat, class:'form-control' %>
        </div>
        <div>
          <label>Longitude</label>
          <%= f.text_field :second_coordinate_long, class:'form-control' %>
        </div>
        <button type="submit" style="margin-top: 10px;">
        Enviar </button>
        <%= link_to root_path do %>
          <%= 'Voltar' %>
        <% end %>
        <br>
        <% if @distance %>
          <%= "A distância entre os dois pontos é de #{@distance} Metros" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>